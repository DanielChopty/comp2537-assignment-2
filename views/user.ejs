<div class="card mb-3 shadow-sm">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h5 class="card-title mb-1"><%= user.name %></h5>
        <p class="card-text text-muted mb-0"><%= user.email %></p>
        <small class="text-secondary">Role: <strong><%= user.role %></strong></small>
      </div>
      <div>
        <% if (user.role === 'admin') { %>
          <a href="/demote/<%= user._id %>" class="btn btn-outline-warning btn-sm">Demote</a>
        <% } else { %>
          <a href="/promote/<%= user._id %>" class="btn btn-outline-success btn-sm">Promote</a>
        <% } %>
      </div>
    </div>
  </div>
  