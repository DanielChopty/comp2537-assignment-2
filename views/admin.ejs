<%- include('templates/header', { title: 'Admin Dashboard' }) %>

<div class="container mt-5">
  <h2 class="mb-4">Admin Dashboard</h2>
  <p class="text-muted">Welcome, <%= username %>. Manage users below:</p>

  <% if (users && users.length > 0) { %>
    <% users.forEach(user => { %>
      <%- include('templates/user', { user: user, currentUserEmail: email }) %>
    <% }) %>
  <% } else { %>
    <p>No users found.</p>
  <% } %>

  <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
</div>

<%- include('templates/footer') %>
